<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.importer.service.kafka.BrokerComponent">

    <documentation>
        The service runs Kafka and Zookeeper instances for further event-based use cases

        <code>
            <extension target="org.nuxeo.ecm.platform.importer.service.DefaultImporterComponent" point="brokerConfiguration">
                <brokerConfig
                    partition="4"
                    replication="1"
                />
            </extension>
        </code>

    </documentation>

    <implementation
            class="org.nuxeo.ecm.platform.importer.service.kafka.BrokerComponent" />

    <service>
        <provide interface="org.nuxeo.ecm.platform.importer.service.kafka.BrokerService" />
    </service>

    <extension-point name="brokerConfiguration">
        <object class="org.nuxeo.ecm.platform.importer.service.kafka.BrokerConfigurationDescriptor" />
    </extension-point>

</component>